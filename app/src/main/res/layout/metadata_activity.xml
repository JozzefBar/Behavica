<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/metadata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MetadataActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/mainTextView2"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text="@string/please_provide_metadata"
                    android:textAlignment="center"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_border">

                <TextView
                        android:id="@+id/userIdText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/user_id_default"
                        android:textSize="14sp"
                        android:textColor="@color/textColorPrimary"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/emailText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/email_default"
                        android:textSize="14sp"
                        android:textColor="@color/textColorPrimary"
                        android:layout_marginTop="8dp"/>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/userAgeLayout"
                    android:layout_marginTop="4dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/age_hint"
                        android:id="@+id/userAgeInput"
                        android:inputType="number"
                        android:textColor="@color/textColorPrimary"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender_label"
                    android:textStyle="bold"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="8dp"/>

            <Spinner
                    android:id="@+id/genderSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/spinner_background"
                    android:textColor="@color/textColorPrimary"/>

            <CheckBox
                    android:text="@string/biometric_data_consent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox"
                    android:layout_marginTop="20dp"/>

            <Button
                    android:text="@string/save_continue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/saveButton"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/buttonText"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="24dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>